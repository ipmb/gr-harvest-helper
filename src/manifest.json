{
  "manifest_version": 3,
  "name": "Unofficial Harvest Time Tracking Helper",
  "version": "3.3.4",
  "description": "Unofficial Harvest time tracker which links your time logs to issues in supported trackers (Gitlab, GitHub, GHES, Jira and Zammad)",
  "author": "Lincoln Loop",
  "action": {
    "default_icon": {
      "16": "images/harvest-icon-48.png",
      "24": "images/harvest-icon-48.png",
      "32": "images/harvest-icon-48.png"
    },
    "default_popup": "popupTimer/popup.html"
  },
  "icons": {
    "16": "images/harvest-icon-16.png",
    "48": "images/harvest-icon-48.png",
    "128": "images/harvest-icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ticketName.js"],
      "matches": [
        "https://gitlab.com/*",
        "https://github.com/*",
        "https://*.ghe.com/*",
        "https://*.atlassian.net/*",
        "https://zammad.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*",
        "https://*.ghe.com/*",
        "https://github.com/*",
        "https://*.atlassian.net/*",
        "https://zammad.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://platform.harvestapp.com"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{db2007e9-92f3-4875-9580-0a039b473605}"
    }
  }
}
